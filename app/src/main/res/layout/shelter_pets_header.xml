<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="77dp"
    android:weightSum="3">

    <LinearLayout
        android:id="@+id/shelterCall"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="1"
        android:focusable="true"
        android:nextFocusRight="@id/shelterEmail">

        <ImageView
            android:id="@+id/imShelterCall"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/ic_local_phone_24dp"
            android:contentDescription="@string/cd_call_shelter"/>

        <TextView
            android:id="@+id/tvShelterCall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:textSize="14sp"
            android:textColor="@color/colorGreen"
            android:fontFamily="sans-serif-medium"
            android:text="@string/shelter_call"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/shelterEmail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="1"
        android:focusable="true"
        android:nextFocusRight="@id/shelterDirection">

        <ImageView
            android:id="@+id/imShelterEmail"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/ic_email_24px"
            android:contentDescription="@string/cd_email_shelter"/>

        <TextView
            android:id="@+id/tvShelterEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:textSize="14sp"
            android:textColor="@color/colorGreen"
            android:fontFamily="sans-serif-medium"
            android:text="@string/shelter_email"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/shelterDirection"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="1"
        android:focusable="true"
        android:nextFocusLeft="@id/shelterEmail">

        <ImageView
            android:id="@+id/imShelterDirection"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/ic_directions_24px"
            android:contentDescription="@string/cd_get_direction"/>

        <TextView
            android:id="@+id/tvShelterDirection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:textSize="14sp"
            android:textColor="@color/colorGreen"
            android:fontFamily="sans-serif-medium"
            android:text="@string/shelter_head_direction"/>

    </LinearLayout>

</LinearLayout>